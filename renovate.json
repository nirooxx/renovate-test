{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":pinAllExceptPeerDependencies"],
  "semanticCommits": "enabled",
  "enabledManagers": ["npm", "dockerfile"],
  "branchPrefix": "deps/",
  "timezone": "Europe/Berlin",
  "schedule": ["at any time"],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "regexManagers": [
    {
      "fileMatch": ["(^|/)Dockerfile$"],
      "matchStrings": [
        "^FROM\\s+(?<depName>[^:\\s]+):(?<currentValue>\\d+\\.\\d+\\.\\d+)-alpine"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "{{depName}}-alpine"
    }
  ],

  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies","devDependencies","peerDependencies"],
      "matchUpdateTypes": ["major","minor","patch","pin","digest"],
      "semanticCommitType": "chore",
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "automergeStrategy": "merge-commit"
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^@actions/"]
    },
    {
      "groupName": "TypeScript Build Tools",
      "matchManagers": ["npm"],
      "matchPackageNames": ["typescript","ts-jest","@tsconfig/node22","tsx"]
    },
    {
      "groupName": "Linting Tools",
      "matchManagers": ["npm"],
      "matchPackageNames": ["eslint","@sap/eslint-config","prettier"]
    },
    {
      "groupName": "Testing Frameworks",
      "matchManagers": ["npm"],
      "matchPackageNames": ["jest","@jest/globals","jest-environment-node"]
    },
    {
      "groupName": "Docker Dependencies",
      "matchManagers": ["dockerfile"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "automergeStrategy": "merge-commit"
    }
  ]
}
