{
  "extends": [
    "config:recommended"
  ],
  "semanticCommits": "enabled",
  "enabledManagers": [
    "npm",
    "dockerfile"
  ],
  "branchPrefix": "deps/",
  "timezone": "Europe/Berlin",
  "packageRules": [
    {
      "matchCategories": [
        "dockerfile"
      ],
      "enabled": true,
      "groupName": "Docker Dependencies"
    },
    {
      "semanticCommitType": "chore",
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "groupName": "GitHub Actions",
      "matchPackageNames": [
        "/@actions/*/"
      ]
    },
    {
      "groupName": "TypeScript Build Tools",
      "matchPackageNames": [
        "typescript",
        "ts-jest",
        "@tsconfig/node22",
        "tsx"
      ]
    },
    {
      "groupName": "Linting Tools",
      "matchPackageNames": [
        "eslint",
        "@sap/eslint-config",
        "prettier"
      ]
    },
    {
      "groupName": "Testing Frameworks",
      "matchPackageNames": [
        "jest",
        "@jest/globals",
        "jest-environment-node"
      ]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}
