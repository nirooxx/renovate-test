{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":pinAllExceptPeerDependencies"
  ],
  "semanticCommits": "enabled",
  "enabledManagers": ["npm", "dockerfile", "docker-compose"],
  "branchPrefix": "deps/",
  "timezone": "Europe/Berlin",
  "schedule": ["at any time"],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "automergeStrategy": "merge-commit",

   "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["(^|/)Dockerfile$"],
      "matchStrings": [
        "^FROM\\s+(?<depName>[^:\\s]+):(?<currentValue>\\d+\\.\\d+\\.\\d+)-alpine"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "{{depName}}-alpine"
    }
  ],

   "regexManagers": [
    {
      "fileMatch": ["(^|/)Dockerfile$"],
      "matchStrings": [
        "^FROM\\s+(?<depName>[^:\\s]+):(?<currentValue>\\d+\\.\\d+\\.\\d+)-alpine"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "{{depName}}-alpine"
    }
  ],

  "packageRules": [
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies", "devDependencies", "peerDependencies"],
      "matchUpdateTypes": ["major", "minor", "patch", "pin", "digest"],
      "semanticCommitType": "chore",
        "automerge": true,
        "automergeType": "pr",
        "platformAutomerge": true,
        "automergeStrategy": "merge-commit"
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^@actions/"]
    },
    {
      "groupName": "TypeScript Build Tools",
      "matchManagers": ["npm"],
      "matchPackageNames": ["typescript", "ts-jest", "@tsconfig/node22", "tsx"]
    },
    {
      "groupName": "Linting Tools",
      "matchManagers": ["npm"],
      "matchPackageNames": ["eslint", "@sap/eslint-config", "prettier"]
    },
    {
      "groupName": "Testing Frameworks",
      "matchManagers": ["npm"],
      "matchPackageNames": ["jest", "@jest/globals", "jest-environment-node"]
    },
    {
      "groupName": "Docker Images",
      "matchManagers": ["dockerfile", "docker-compose"],
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major", "minor", "patch", "digest"],
      "automerge": true,
      "automergeType": "pr",
       "platformAutomerge": true,
       "automergeStrategy": "merge-commit"
    }
  ]
}
