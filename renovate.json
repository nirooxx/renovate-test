{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "semanticCommits": "enabled",
    "enabledManagers": [
        "npm",
        "dockerfile"
    ],
    "branchPrefix": "deps/",
    "timezone": "Europe/Berlin",
    "schedule": [
        "at any time"
    ],
    "prHourlyLimit": 0,
    "prConcurrentLimit": 0,
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
            "at any time"
        ]
    },
    "addLabels": [
        "renovate",
        "dependencies"
    ],
    "additionalReviewers": [
        "nirooxx"
    ],
    "reviewersSampleSize": 1,
    "packageRules": [
        {
            "matchPackageNames": [
                "*"
            ],
            "automerge": true,
            "automergeType": "pr",
            "semanticCommitType": "chore"
        },
        {
            "groupName": "GitHub Actions",
            "matchPackageNames": [
                "/^@actions//"
            ]
        },
        {
            "groupName": "TypeScript Build Tools",
            "matchPackageNames": [
                "typescript",
                "ts-jest",
                "@tsconfig/node22",
                "tsx"
            ]
        },
        {
            "groupName": "Linting Tools",
            "matchPackageNames": [
                "eslint",
                "@sap/eslint-config",
                "prettier"
            ]
        },
        {
            "groupName": "Testing Frameworks",
            "matchPackageNames": [
                "jest",
                "@jest/globals",
                "jest-environment-node"
            ]
        },
        {
            "groupName": "Docker Dependencies",
            "matchCategories": [
                "dockerfile"
            ],
            "enabled": true
        }
    ]
}
